{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}